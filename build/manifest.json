
{
  "manifest_version": 3,
  "name": "Personal Productivity Tracker",
  "version": "1.0",
  "description": "Track time spent on selected websites and set daily goals.",
  "action": {
    "default_title": "Productivity Tracker",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
